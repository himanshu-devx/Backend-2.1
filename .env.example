NODE_ENV=development
LOG_LEVEL=info
SERVICE_NAME=API-SERVICE
MONGODB_URI=mongodb://localhost:27017/smartFintech
MONGO_DB_NAME=smartFintech
API_PORT=4000
PAYMENT_PORT=3000
WORKER_TZ=UTC

# SMTP Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# App Branding
APP_BRAND_NAME="Fintech App"
APP_BASE_URL="http://localhost:4000"
JWT_SECRET=your_jwt_secret

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Super Admin Security
SUPER_ADMIN_PANEL_IP_WHITELIST_ENABLED=false
SUPER_ADMIN_IPS=127.0.0.1

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# Domain Configuration
API_DOMAIN=api.example.com
PAYMENT_DOMAIN=payment.example.com

# Postgres (Ledger Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5435
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=wisipay_ledger
POSTGRES_POOL_MAX=20

# Notifications Toggle
REPORT_EMAIL_TRANSACTIONS_ENABLED=false
REPORT_EMAIL_STATEMENT_ENABLED=true

# AlphaPay PLE-1 Credentials
ALPHAPAY_PLE1_API_KEY=your_alphapay_api_key
ALPHAPAY_PLE1_API_SALT=your_alphapay_api_salt
ALPHAPAY_PLE1_BASE_URL=https://dashboard.alphapay.com
