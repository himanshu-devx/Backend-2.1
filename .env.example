# Core app settings
NODE_ENV=production
LOG_LEVEL=info
SERVICE_NAME=api-platform
API_PORT=4000
PAYMENT_PORT=4001
APP_BASE_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000
APP_BRAND_NAME="Wisipay Fintech"
MONGO_DB_NAME=smartFintech
MONGODB_URI=mongodb+srv://<user>:<pass>@<host>/<db>?authSource=admin
POSTGRES_HOST=<host>
POSTGRES_PORT=25060
POSTGRES_USER=<user>
POSTGRES_PASSWORD=<password>
POSTGRES_DB=<db>
POSTGRES_POOL_MAX=20
REDIS_URL=redis://<host>:6379
JWT_SECRET=<secret>
API_SECRET_ENC_KEY=<secret>

# Email provider selection
MAIL_PROVIDER=zeptomail
MAIL_FROM_EMAIL=noreply@example.com
MAIL_FROM_NAME="Wisipay Fintech"

# ZeptoMail (Zoho) configuration
ZEPTOMAIL_API_KEY=<zeptomail_api_key>
ZEPTOMAIL_FROM_EMAIL=noreply@example.com
ZEPTOMAIL_FROM_NAME="noreply"
ZEPTOMAIL_BOUNCE_ADDRESS=<optional_bounce_address>
ZEPTOMAIL_URL=https://api.zeptomail.com/v1.1/email

# Maileroo configuration (switch MAIL_PROVIDER=maileroo to use this)
MAILEROO_API_KEY=<maileroo_api_key>
MAILEROO_FROM_EMAIL=noreply@example.com
MAILEROO_FROM_NAME="noreply"
MAILEROO_URL=https://smtp.maileroo.com/api/v2

# TPIPAY (UPI collection)
TPIPAY_API_TOKEN=<tpipay_api_token>

# Report settings
REPORT_EMAIL_TRANSACTIONS_ENABLED=false
REPORT_EMAIL_STATEMENT_ENABLED=true
REPORT_STORAGE_DIR=/data/reports
AMOUNT_UNIT=RUPEES

# Observability
OTLP_HTTP_URL=http://otel-collector:4318/v1/traces

# Security
SUPER_ADMIN_PANEL_IP_WHITELIST_ENABLED=false
SUPER_ADMIN_IPS=127.0.0.1,::1

# Database TLS
PGSSLMODE=require
