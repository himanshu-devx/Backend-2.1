{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": [
      "node"
    ],
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "fintech-ledger": [
        "libs/fintech-ledger/src/index.ts"
      ],
      "fintech-ledger/*": [
        "libs/fintech-ledger/src/*"
      ]
    }
  },
  "include": [
    "src",
    "libs/fintech-ledger/src"
  ]
}