{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "fintech-ledger": [
        "libs/fintech-ledger/src/index.ts"
      ],
      "fintech-ledger/*": [
        "libs/fintech-ledger/src/*"
      ]
    }
  },
  "include": [
    "src",
    "libs/fintech-ledger/src"
  ]
}