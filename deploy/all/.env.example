# App image
APP_IMAGE=ghcr.io/your-org/your-app
APP_TAG=1.0.0

# App runtime
NODE_ENV=production
LOG_LEVEL=info
SERVICE_NAME=app-service

API_PORT=4000
PAYMENT_PORT=3000

# Database
MONGODB_URI=mongodb://mongo:27017
MONGO_DB_NAME=app_db
MONGO_INITDB_ROOT_USERNAME=mongo
MONGO_INITDB_ROOT_PASSWORD=mongo

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app_ledger
POSTGRES_POOL_MAX=20

REDIS_URL=redis://:redis@redis:6379
REDIS_PASSWORD=redis
REDIS_PORT=6379

# Security
JWT_SECRET=change_me
API_SECRET_ENC_KEY=change_me_32_bytes_min

# Mail
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=change_me

# Public URLs
APP_BRAND_NAME="Your App"
APP_BASE_URL=https://api.example.com
FRONTEND_URL=https://frontend.example.com

# Rate limits / TPS
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60
SYSTEM_TPS=100
SYSTEM_TPS_WINDOW=1

# Observability (single host uses otel-collector service)
OTLP_HTTP_URL=http://otel-collector:4318/v1/traces

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Caddy
CADDY_EMAIL=admin@example.com
API_DOMAIN=api.example.com
PAYMENT_DOMAIN=pay.example.com
